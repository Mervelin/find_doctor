<% title 'Find Doctor' %>
<%= form_tag welcome_doctors_path, method: :get, class: 'form-inline form-search' do %>
    <div class="form-group">
      <%= text_field_tag :search_specialization, params[:search_specialization], class: 'form-control',
                         placeholder: 'Specialization'  %>
    </div>
    <div class="form-group">
      <%= text_field_tag :search_city, params[:search_city], class: 'form-control',
                         placeholder: 'City' %>
    </div>

    <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
<% end %>


