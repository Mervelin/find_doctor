<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title || 'Find Doctor' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to('Find Doctor', root_path, class: 'navbar-brand logo') %>
          </div>

          <ul class="nav nav-pills navbar-right">
            <li role="presentation" class="<%= 'active' if @page_title == 'Panel Pacjenta' %>">
              <%= link_to('Panel Pacjenta', welcome_index_path, class: 'navbar-brand') %></a></li>
            <li role="presentation" class="<%= 'active' if @page_title == 'Panel Lekarza' %>">
              <%= link_to('Panel Lekarza', welcome_index_path, class: 'navbar-brand') %></li>
          </ul>
        </div>
      </nav>
    </div>
    <div id="container">
      <%if !flash[:notice].blank? %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
